# Git-to-Docs Platform Environment Configuration

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=false

# Repository Processing
MAX_REPO_SIZE_MB=500
CLONE_TIMEOUT_SECONDS=300
MAX_CONCURRENT_BUILDS=5

# Performance Constraints
MAX_BUILD_TIME_SECONDS=8
MAX_MEMORY_USAGE_MB=512
MAX_DEPLOY_TIME_SECONDS=30

# External Services
OPENAI_API_KEY=your_openai_api_key_here
GITHUB_TOKEN=your_github_token_here

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=docify-sites

# CDN Configuration
CDN_BASE_URL=https://cdn.docify.dev
CUSTOM_DOMAIN_BASE=docify.dev

# Analytics
PLAUSIBLE_DOMAIN=docify.dev
PLAUSIBLE_API_KEY=your_plausible_api_key

# Redis Configuration
REDIS_URL=redis://localhost:6379